<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/edit_server_ip_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server IP" />

    <EditText
        android:id="@+id/edit_server_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_server_ip_info"
        android:hint="Server IP" />

    <TextView
        android:id="@+id/edit_server_port_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_server_ip"
        android:text="Server port" />

    <EditText
        android:id="@+id/edit_server_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server port"
        android:layout_below="@id/edit_server_port_info"
        android:layout_alignParentStart="true"/>

</RelativeLayout>